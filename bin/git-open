#!/usr/bin/perl
use Git::Open;
use Getopt::Mini;   # parses the @ARGV into %ARGV

my $opts = {};
if( (exists $ARGV{'compare'}) || (exists $ARGV{'c'})  )  {
    my $compare = {
        diff => $ARGV{'compare'} || $ARGV{'c'}
    };

    $opts->{compare} = $compare;
}

my $url = Git::Open::url($opts);

system("git web--browse $url");
